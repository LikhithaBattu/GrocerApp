@model GrocerApp.ViewModel.BaseViewModel

@{
    ViewBag.Title = "Edit Inventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Inventory</h2>

@using (Html.BeginForm("EditInventory", "Admin", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Inventory.First().ProductID) 

    <div class="form-group">
        @Html.LabelFor(model => model.Inventory.First().ProductID)
        @Html.TextBoxFor(model => model.Inventory.First().ProductID, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Inventory.First().StockLevel)
        @Html.TextBoxFor(model => model.Inventory.First().StockLevel, new { @class = "form-control" })
    </div>


    <button type="submit" class="btn btn-primary">Save Changes</button>
}


<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>


<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

