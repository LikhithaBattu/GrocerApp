@model GrocerApp.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
}
@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="container">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 row">
        <div class="form-group">
            <h3>Login to my account</h3>
        </div>
        <div class="form-group">
            <p>Enter your User Name and password</p>
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "User Name" })
        </div>

        <div class="form-group">
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password" })
        </div>
        <div class="form-group">
            <button style="width:280px" type="submit" class="btn btn-primary">Login</button>
        </div>
        <div class="form-group">
            <p>New Customer? <a href="@Url.Action("Register", "Account")"> Register </a></p>
        </div>
        <div class="form-group">
            <p>Lost password? <a href="@Url.Action("RecoveryPassword", "Account")"> Recover password</a></p>
        </div>
    </div>
</div>

   

    
}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

